<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"

        version="3.1">
    <display-name>education-helper</display-name>
    <welcome-file-list>
        <welcome-file>/WEB-INF/jsp/home-page.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>homePage</servlet-name>
        <jsp-file>/WEB-INF/jsp/homePage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>homePage</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>form_task</servlet-name>
        <jsp-file>/WEB-INF/jsp/form-task-page.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>form_task</servlet-name>
        <url-pattern>/form_task</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>clientInstructionPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/client-instruction.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>clientInstructionPage</servlet-name>
        <url-pattern>/client-instruction</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>services</servlet-name>
        <jsp-file>/WEB-INF/jsp/servicesPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>services</servlet-name>
        <url-pattern>/services</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>authorServices</servlet-name>
        <jsp-file>/WEB-INF/jsp/authorQuestions.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorServices</servlet-name>
        <url-pattern>/author-questions</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>authorization</servlet-name>
        <jsp-file>/WEB-INF/jsp/authorizationPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorization</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>authorRegistration</servlet-name>
        <jsp-file>/WEB-INF/jsp/authorRegistrationPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorRegistration</servlet-name>
        <url-pattern>/author-registration-form</url-pattern>
    </servlet-mapping>
</web-app>
